{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  // "include": ["src/**/*", "./types.d.ts"] ,
  "exclude": ["node_modules", "dist"]
}
